#!/bin/bash
# Pre-commit hook for hoards
# Runs cargo fmt, clippy, and tests before allowing commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "  Checking format..."
if ! cargo fmt --check > /dev/null 2>&1; then
    echo "âŒ Format check failed. Run 'cargo fmt' to fix."
    exit 1
fi
echo "  âœ“ Format OK"

# Run clippy
echo "  Running clippy..."
if ! cargo clippy --quiet -- -D warnings 2>/dev/null; then
    echo "âŒ Clippy found issues. Fix them before committing."
    exit 1
fi
echo "  âœ“ Clippy OK"

# Run tests
echo "  Running tests..."
if ! cargo test --quiet 2>/dev/null; then
    echo "âŒ Tests failed. Fix them before committing."
    exit 1
fi
echo "  âœ“ Tests OK"

echo "âœ… All pre-commit checks passed!"
